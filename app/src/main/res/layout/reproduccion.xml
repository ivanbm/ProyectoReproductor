<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonando: "
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvSonando" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivImagen"
            android:layout_gravity="bottom"
            android:src="@drawable/playing" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="#ff009bdb">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btAnterior"
            android:layout_weight="0.20"
            android:src="@drawable/anterior"
            android:scaleType="fitCenter"
            android:background="#ff009bdb"
            android:onClick="anterior" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btStop"
            android:layout_weight="0.20"
            android:src="@drawable/stop"
            android:background="#ff009bdb"
            android:scaleType="fitCenter"
            android:onClick="stop" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPlay"
            android:layout_weight="0.20"
            android:src="@drawable/play"
            android:scaleType="fitCenter"
            android:background="#ff009bdb"
            android:onClick="play" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPausa"
            android:layout_weight="0.20"
            android:src="@drawable/pause"
            android:scaleType="fitCenter"
            android:background="#ff009bdb"
            android:onClick="pausa" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSiguiente"
            android:layout_weight="0.20"
            android:src="@drawable/siguiente"
            android:scaleType="fitCenter"
            android:background="#ff009bdb"
            android:onClick="siguiente" />
    </LinearLayout>

</LinearLayout>